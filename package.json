{
  "name": "act-test-runner",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "jiti": "^2.4.2",
    "prettier": "^3.5.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "lint:check": "eslint . --max-warnings 0",
    "prettier:check": "prettier --check .",
    "build": "bun build src/index.ts --outdir dist && bunx tsc --emitDeclarationOnly",
    "check": "bun run lint:check && bun run prettier:check && bun run build && bun test"
  }
}
