{
  "name": "@pshevche/act-test-runner",
  "version": "1.0.1",
  "description": "Convention wrapper around https://github.com/nektos/act for e2e testing GitHub actions",
  "author": "Pavlo Shevchenko",
  "keywords": [
    "github",
    "github actions",
    "act",
    "nektos act",
    "testing"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pshevche/act-test-runner"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "clean": "rm -r dist",
    "lint:fix": "eslint .",
    "prettier:fix": "prettier --write .",
    "license:fix": "addlicense -c \"original authors\" -l mit -v src/",
    "lint:check": "eslint . --max-warnings 0",
    "prettier:check": "prettier --check .",
    "license:check": "addlicense -check src/",
    "package": "tsc --project tsconfig.package.json",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest",
    "check": "npm run lint:check && npm run prettier:check && npm run package && npm run test"
  }
}
