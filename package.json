{
  "name": "@pshevche/act-test-runner",
  "author": "Pavlo Shevchenko",
  "keywords": [
    "GitHub actions",
    "act",
    "testing"
  ],
  "license": "MIT",
  "version": "0.1",
  "description": "Convention wrapper around https://github.com/nektos/act for e2e testing GitHub actions",
  "publishConfig": {
    "access": "public"
  },
  "module": "src/index.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "jiti": "^2.4.2",
    "prettier": "^3.5.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "clean": "rm -r dist",
    "lint:fix": "eslint .",
    "prettier:fix": "prettier --write .",
    "license:fix": "addlicense -c \"original authors\" -l mit -v src/",
    "lint:check": "eslint . --max-warnings 0",
    "prettier:check": "prettier --check .",
    "license:check": "addlicense -check src/",
    "build": "bun build src/index.ts --outdir dist && bunx tsc --project tsconfig.types.json",
    "check": "bun run lint:check && bun run prettier:check && bun run build && bun test --timeout 30000"
  }
}
